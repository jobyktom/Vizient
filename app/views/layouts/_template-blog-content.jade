include ../mixins/_all-mixins
doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        title VHA
        meta(name="description", content="")
        meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
        link(rel="shortcut icon", href="favicon.ico")

        //- build:css styles/vendor.min.css -->
        //- endbuild -->
        //- build:css({.tmp,app}) styles/main.min.css -->
        // bower:css
        link(rel='stylesheet', href='../bower_components/jquery-timeline/dist/timeline.min.css')
        // endbower
        link(rel="stylesheet", href="styles/main.css")
        //- endbuild -->
        <!--[if lt IE 9]>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/respond.js/1.4.2/respond.min.js"></script>
        <![endif]-->
    body
        .outer-wrapper
            block header
                include _header
                include _mobile-header
                include _mobile-menu
            //- block contenthero
            //- include _header
            //- include _mobile-header
            block hero
            block breadcrumbs
            <!-- Start Body Content With Sidebar-->
            main(class="body-content content-page")
                section(class="module module--outer-bg")
                    .container.module__content.bg-white
                        .row
                            .col-sm-8
                                // Start blog entry header
                                header.post__header
                                    block postHeader
                                // End blog entry header
                        .row
                            .col-sm-8
                                // Start blog article
                                article.post__entry
                                    // Start blog entry content
                                    .post__content
                                        block postContent
                                    // End blog entry content
                                    // Start blog entry footer
                                    footer.post__footer
                                        block postFooter
                                    // End blog entry footer
                                // End blog article
                            .col-sm-4
                                block sidebar-content
            <!-- End Body Content -->
            block footer
                include _footer
        //- build:js(./app/) scripts/vendor.min.js -->
        // bower:js
        script(src='../bower_components/jquery/dist/jquery.js')
        script(src='../bower_components/bootstrap-sass/assets/javascripts/bootstrap.js')
        script(src='../bower_components/jQuery-ajaxTransport-XDomainRequest/jquery.xdomainrequest.min.js')
        script(src='../bower_components/moment/moment.js')
        script(src='../bower_components/jquery-timeline/dist/timeline.min.js')
        script(src='../bower_components/jquery.expander/jquery.expander.js')
        // endbower
        //- endbuild -->
        script(src='https://cdn.jsdelivr.net/jquery.jfeed/0.1/jquery.jfeed.js')
        //- build:js(.tmp) scripts/plugins.min.js -->
        //- endbuild -->
        //- build:js(.tmp) scripts/main.min.js -->

        script(src="scripts/main.js")
        //- endbuild -->