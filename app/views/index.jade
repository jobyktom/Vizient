block content
    main(class="body-content")
        // Start Content section - 2 column
        section(class="module module--outer-bg bdb-brand-24")
            .module__content.bg-white
                .container
                    .row
                        .col-sm-12.col-md-6
                            h1 This is an H1 tag
                            h2 This is an H2 tag
                            h3 This is an H3 tag
                            h4 This is an H4 tag
                            h5 This is an H5 tag
                            h6 This is an H6 tag
                            .metadata-bold Metadata bold
                            .metadata-regular Metadata regular
                            .metadata-italic Metadata italic
                            .metadata-eyebrow Metadata eyebrow
                            .metadata-byline Metadata byline
                            .e28 editorial copy 28px
                            .e24 editorial copy 24px
                            .e20 editorial copy 20px
                            .e18 editorial copy 18px
                            a.btn(href="#") See our story
