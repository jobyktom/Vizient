mixin contentHero(contentHeroObject)
    - var heroClasses = contentHeroObject.heroClasses || ''

    <!-- Start Content Hero Module -->
    section(class="content-hero #{heroClasses}")

        div(class="content-hero__content")
            .container
                div(class='content-hero__image hidden-xs hidden-sm', style="background-image: url(#{contentHeroObject.heroImageURL})")
                .row
                    .col-sm-6.col-md-5
                        h1.content-hero__title #{contentHeroObject.heroTitle}
                        h3.content-hero__sub-title #{contentHeroObject.heroSubtitle}
    <!-- End Content Hero Module -->